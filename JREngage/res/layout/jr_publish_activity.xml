<?xml version="1.0" encoding="utf-8"?>

<!--
   - Layout for JRPublishActivity
  -->
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <!--android:padding="0dp"-->

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
        <!--android:background="#888888"-->

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <!--android:paddingTop="0dp"-->
            <!--According to
                http://code.google.com/p/foursquared/source/browse/main/res/layout/main_activity.xml
                paddingTop of 0 should obscure the tabStrip, but it doesn't work here for some
                reason-->

            <RelativeLayout
                android:id="@+id/jr_tab_email_sms_content"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dp"
                android:orientation="vertical"
                >

                <EditText
                    android:id="@+id/jr_email_sms_edit_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:layout_marginRight="4dip"
                    android:layout_marginLeft="4dip"
                    android:layout_alignParentTop="true"
                    android:gravity="top|left"
                    android:hint="@string/jr_please_enter_text"
                    android:textColorHint="@color/jr_TEXT_COLOR_HINT"
                    android:lines="4"
                    android:inputType="textMultiLine|textAutoComplete"
                    />

                <LinearLayout
                    android:id="@+id/jr_email_sms_button_layout"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:background="@color/jr_JANRAIN_BLUE_20PERCENT"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:gravity="top|center_horizontal"
                    android:paddingBottom="10dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jr_triangle_icon"
                        />

                    <LinearLayout
                        android:id="@+id/jr_email_sms_button_container"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:orientation="vertical"
                        >

                        <!-- It would be nice to use xmlns:jr="http://schemas.android.com/apk/res/com.janrain.android.engage"
                             here, but there's an open bug preventing aapt from being able to
                             compile the subsequent usage of the jr:jr_color attribute.
                             http://code.google.com/p/android/issues/detail?id=9656
                             -->
                        <com.janrain.android.engage.ui.ColorButton
                            android:id="@+id/jr_email_button"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:text="Email"
                            android:gravity="center_horizontal|center_vertical"
                            android:textSize="20dip"
                            android:textStyle="bold"
                            android:textColor="#ffffffff"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            />
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:layout_marginLeft="10dp"-->

                        <com.janrain.android.engage.ui.ColorButton
                            android:id="@+id/jr_sms_button"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:layout_above="@id/jr_email_button"
                            android:text="SMS"
                            android:gravity="center_horizontal|center_vertical"
                            android:textSize="20dip"
                            android:textStyle="bold"
                            android:textColor="#ffffffff"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            />
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:layout_marginLeft="10dp"-->
                        
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/jr_email_sms_powered_by_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_above="@id/jr_email_sms_button_layout"
                    android:layout_marginBottom="4dip"
                    android:singleLine="true"
                    android:text="@string/jr_powered_by"
                    android:textColor="#ff666666"
                    android:textStyle="normal"
                    android:paddingRight="6dip"
                    android:textSize="12dip"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/jr_tab_view_content"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dp"
                >

                <EditText
                    android:id="@+id/jr_edit_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:layout_marginRight="4dip"
                    android:layout_marginLeft="4dip"
                    android:gravity="top|left"
                    android:hint="@string/jr_please_enter_text"
                    android:textColorHint="@color/jr_TEXT_COLOR_HINT"
                    android:lines="3"
                    android:inputType="textMultiLine|textAutoComplete"
                    />

                <TextView
                    android:id="@+id/jr_character_count_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jr_edit_comment"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:textColor="#ff333333"
                    android:text="@string/jr_calculating_remaining_characters"
                    android:layout_marginRight="4dip"
                    android:layout_marginLeft="4dip"
                    android:layout_marginBottom="5dip"
                    android:textSize="10dip"
                    />

                <!-- This RelativeLayout expands to the size between the character count view and
                     the provider icon.  It renders nothing, but only server as a bounding
                     container for the jr_preview_box.  (We can't allow the preview box to grow
                     to this size though, because then it's background does too, and that looks
                     weird. -->
                <RelativeLayout
                    android:id="@+id/jr_nested_layout_mania_sunday_sunday_sunday"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jr_character_count_view"
                    android:layout_above="@+id/jr_provider_icon"
                    >

                    <!-- This RelativeLayout expands to the size between the character count view and
                         the provider icon.  It renders nothing, but only serves as a bounding
                         container for the jr_preview_box.  (We can't allow the preview box to grow
                         to this size though, because then it's background does too, and that looks
                         weird. -->
                    <!--Cute name, btw...-->
                    <RelativeLayout
                        android:id="@+id/jr_preview_box"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/jr_bg_publish_preview"
                        android:paddingBottom="4dip"
                        >
                        <!--android:gravity="top|left"-->

                        <LinearLayout
                            android:id="@+id/jr_preview_box_border"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/jr_bg_publish_preview_border"
                            android:layout_marginTop="8dip"
                            android:layout_marginBottom="4dip"
                            android:layout_marginRight="4dip"
                            android:layout_marginLeft="4dip"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            >
                            <!--android:gravity="top|left"-->

                            <TextView
                                android:id="@+id/jr_preview_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:bufferType="spannable"
                                android:layout_marginTop="2dip"
                                android:layout_marginLeft="4dip"
                                android:layout_marginBottom="2dip"
                                android:layout_marginRight="4dip"
                                android:textSize="12dip"
                                android:layout_weight="1"
                                />
                            <!--android:maxLines="3"-->
                                <!--android:layout_below="@id/character_count_view"-->
                                <!--android:singleLine="true"-->

                            <RelativeLayout
                                android:id="@+id/jr_media_content_view"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dip"
                                android:layout_marginLeft="4dip"
                                android:layout_marginBottom="4dip"
                                android:layout_marginRight="4dip"
                                android:paddingTop="3dp"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:paddingBottom="7dp"
                                android:background="@drawable/jr_bg_provider_activity_info"
                                android:layout_weight="0"
                                >
                                <!--android:layout_height="122dip"-->
                                <!--android:layout_marginTop="10dip"-->
                                <!--android:layout_marginRight="7dip"-->
                                <!--android:layout_marginLeft="7dip"-->
                                <!--android:padding="5dp"-->
                                <!--android:gravity="top|left|bottom|right"-->

                                <ImageView
                                    android:id="@+id/jr_media_content_image"
                                    android:layout_width="45dip"
                                    android:layout_height="45dip"
                                    android:adjustViewBounds="true"
                                    android:maxHeight="45dip"
                                    android:maxWidth="45dip"
                                    android:minHeight="45dip"
                                    android:minWidth="45dip"
                                    android:scaleType="centerCrop"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_margin="5dip"
                                    android:src="@drawable/jr_media60x60"
                                    />

                                <TextView
                                    android:id="@+id/jr_media_content_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dip"
                                    android:layout_marginRight="5dip"
                                    android:layout_marginBottom="5dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_alignParentTop="true"
                                    android:layout_toRightOf="@id/jr_media_content_image"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:textStyle="bold"
                                    android:textColor="#FF074764"
                                    />

                                <!--
                                   - NOTE:  In order to get the text to extend more than two lines, had to use the 'inputType=...'
                                   -        property.  Unfortunately, doing so breaks the ellipsize function.
                                  -->
                                <TextView
                                    android:id="@+id/jr_media_content_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dip"
                                    android:layout_marginRight="5dip"
                                    android:layout_marginBottom="0dip"
                                    android:layout_marginLeft="5dip"
                                    android:layout_below="@id/jr_media_content_title"
                                    android:layout_toRightOf="@id/jr_media_content_image"
                                    android:ellipsize="end"
                                    android:textStyle="normal"
                                    android:maxLines="4"
                                    android:textSize="12dip"
                                    android:inputType="textMultiLine"
                                    />
                                    <!--android:maxHeight="150dip"-->

                            </RelativeLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/jr_preview_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="8dip"
                            android:singleLine="true"
                            android:text="@string/jr_preview"
                            android:textColor="#ff666666"
                            android:background="#ffeeeeee"
                            android:textStyle="normal"
                            android:paddingLeft="4dip"
                            android:paddingRight="6dip"
                            android:textSize="10dip"
                            />
                            <!--android:layout_marginBottom="10dip"-->

                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/jr_tagline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_above="@+id/jr_user_profile_information_and_share_button_container"
                    android:layout_marginBottom="4dip"
                    android:singleLine="true"
                    android:text="@string/jr_powered_by"
                    android:textColor="#ff666666"
                    android:textStyle="normal"
                    android:paddingRight="6dip"
                    android:textSize="12dip"
                    />
                    <!--android:layout_marginLeft="12dip"-->

                <ImageView
                    android:id="@+id/jr_provider_icon"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_above="@+id/jr_user_profile_information_and_share_button_container"
                    android:layout_marginBottom="4dip"
                    android:src="@drawable/jr_icon_facebook"
                    />
                    <!--android:layout_marginRight="4dip"-->

                <LinearLayout
                    android:id="@+id/jr_user_profile_information_and_share_button_container"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="top|center_horizontal"
                    android:padding="0dip"
                    android:background="#33074764"
                    >
                    <!-- android:paddingBottom="22dip" -->

                    <ImageView
                        android:id="@+id/jr_triangle_icon_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jr_triangle_icon"
                        />

                    <LinearLayout
                        android:id="@+id/jr_profile_pic_and_buttons_horizontal_layout"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:paddingTop="0dip"
                        android:paddingRight="10dip"
                        android:paddingBottom="10dip"
                        android:paddingLeft="10dip"
                        >
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentBottom="true"-->
                        <!--android:gravity="top|center_horizontal"-->

                        <LinearLayout
                            android:id="@+id/jr_user_profile_container"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:visibility="gone"
                            android:padding="0dip"
                            android:layout_weight="1"
                            >

                            <ImageView
                                android:id="@+id/jr_profile_pic"
                                android:src="@drawable/jr_profilepic_placeholder"
                                android:layout_width="45dip"
                                android:layout_height="45dip"
                                android:adjustViewBounds="true"
                                android:maxHeight="45dip"
                                android:maxWidth="45dip"
                                android:minHeight="45dip"
                                android:minWidth="45dip"
                                android:scaleType="centerCrop"
                                android:padding="0dip"
                                />
                                <!--android:visibility="gone"-->

                            <LinearLayout
                                android:id="@+id/jr_name_and_sign_out_container"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:paddingTop="0dip"
                                android:paddingRight="5dip"
                                android:paddingBottom="0dip"
                                android:paddingLeft="10dip"
                                >
                                <!--android:layout_width="105dip"-->
                                <!--android:visibility="gone"-->
                                <!--android:layout_width="130dip"-->
                                <!--android:paddingTop="0dip"-->
                                <!--android:background="#330000ff"-->
                                <!--android:layout_width="fill_parent"-->
                                <!--android:layout_alignParentBottom="true"-->
                                <!--android:gravity="top|center_horizontal"-->

                                <TextView
                                    android:id="@+id/jr_user_name"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:gravity="top|left"
                                    android:singleLine="true"
                                    android:paddingBottom="5dip"
                                    android:textSize="14dip"
                                    android:layout_weight="5"
                                    />
                                <!--android:layout_marginTop="10dip"-->
                                <!--android:textStyle="normal"-->
                                <!--android:textColor="#ffdedede"-->
                                <!--android:layout_marginLeft="7dip"-->
                                <!--android:layout_marginBottom="10dip"-->
                                <!--android:paddingRight="6dip"-->

                                <Button
                                    android:id="@+id/jr_sign_out_button"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="Sign Out"
                                    android:textSize="10dip"
                                    android:gravity="bottom|left"
                                    android:textColor="#AA000000"
                                    android:background="#00000000"
                                    android:focusable="false"
                                    android:layout_weight="4"
                                    android:paddingTop="5dip"
                                    android:layout_marginRight="30dip"
                                    />
                                <!--android:layout_width="45dip"-->
                                <!--android:layout_centerVertical="true"-->
                                <!--android:textStyle="bold"-->
                                <!--android:gravity="center_horizontal|center_vertical"-->

                            </LinearLayout>

                        </LinearLayout>

                        <com.janrain.android.engage.ui.ColorButton
                            android:id="@+id/jr_just_share_button"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="Share"
                            android:textSize="20dip"
                            android:textStyle="bold"
                            android:textColor="#ffffffff"
                            android:visibility="gone"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            />
                        <!--android:drawableRight="@drawable/icon_facebook"-->
                        <!--android:layout_width="135dip"-->
                        <!--android:background="@drawable/sel_janrain_135x40"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:textColor="#ffffffff"-->

                        <LinearLayout
                            android:id="@+id/jr_shared_text_and_check_mark_horizontal_layout"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:gravity="right|center_vertical"
                            android:visibility="gone"
                            android:layout_weight="1"
                            >

                            <TextView
                                android:id="@+id/jr_shared"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:layout_centerVertical="true"
                                android:singleLine="true"
                                android:text="@string/jr_shared"
                                android:textSize="20dip"
                                android:textStyle="bold"
                                android:textColor="#aa000000"
                                android:paddingRight="10dip"
                                />

                            <ImageView
                                android:id="@+id/jr_check_mark"
                                android:layout_width="20dip"
                                android:layout_height="20dip"
                                android:src="@drawable/jr_check_mark"
                                android:gravity="right"
                                android:layout_centerVertical="true"
                                />

                        </LinearLayout>

                        <com.janrain.android.engage.ui.ColorButton
                            android:id="@+id/jr_connect_and_share_button"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="Connect and Share"
                            android:textSize="20dip"
                            android:textStyle="bold"
                            android:textColor="#ffffffff"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            />
                        <!--android:drawableRight="@drawable/icon_facebook"-->
                        <!--android:paddingBottom="5dip"-->
                        <!--android:background="@drawable/sel_janrain_280x40"-->
                        <!--android:textColor="#ffffffff"-->
                        <!--android:layout_marginTop="4dp"-->

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>>

        </FrameLayout>

    </LinearLayout>

</TabHost>