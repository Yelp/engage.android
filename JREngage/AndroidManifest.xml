<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.janrain.android.engage">

    <!--according to Xav Ducrochet nothing from the Library Projects manifest *except* the package
        is respected by the Android SDK.  He recommends that the activities contained in a
        library project be listed here for reference purpose so that they can easily be copied
        into the calling application's AndroidManifest.xml-->
    <!--See this post: https://groups.google.com/group/android-developers/msg/9db36f18521fca7d
        which is part of this thread:
        https://groups.google.com/group/android-developers/browse_thread/thread/0b4a5d751346655b/9db36f18521fca7d#9db36f18521fca7d -->


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-sdk android:minSdkVersion="7" />

    <application>
        <!-- For Janrain Engage library -->
        <activity android:name="com.janrain.android.engage.ui.JRProvidersActivity"
                android:theme="@android:style/Theme.Light"/>
                  <!--android:configChanges="orientation|keyboardHidden"-->
        <activity android:name="com.janrain.android.engage.ui.JRLandingActivity"
                android:theme="@android:style/Theme.Light"/>
                  <!--android:configChanges="orientation|keyboardHidden"-->
        <activity android:name="com.janrain.android.engage.ui.JRWebViewActivity"
                android:theme="@android:style/Theme.Light"/>
                  <!--android:configChanges="orientation|keyboardHidden"-->
        <activity android:name="com.janrain.android.engage.ui.JRPublishActivity"
                android:theme="@android:style/Theme.Light.NoTitleBar"/>
                  <!--android:configChanges="orientation|keyboardHidden"-->
    </application>

</manifest>
